{
  "name": "goldran",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "ssl": "npm-run-all -p ssl:*",
    "ssl:dev": "vite --port 9998",
    "ssl:proxy": "local-ssl-proxy --source 9999 --target 9998",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "asset": "npm-run-all -s asset:*",
    "asset:prepare": "mkdirp ./assets/temp",
    "asset:gltf": "npm-run-all -s asset:gltf:*",
    "asset:gltf:webp": "gltf-transform webp ./assets/mansion.glb ./assets/temp/mansion_webp.glb",
    "asset:gltf:draco": "gltf-transform draco ./assets/temp/mansion_webp.glb ./assets/temp/mansion_high.glb",
    "asset:gltf:light": "gltf-transform resize --width 1024 --height 1024 ./assets/temp/mansion_high.glb ./assets/temp/mansion_low.glb",
    "asset:gltf:copy": "copyfiles --flat ./assets/temp/mansion_{high,low}.glb ./src/assets",
    "asset:clean": "rimraf ./assets/temp"
  },
  "dependencies": {
    "@babylonjs/core": "^7.27.0",
    "@babylonjs/inspector": "^7.27.0",
    "@babylonjs/loaders": "^7.27.0",
    "@react-spring/web": "^9.7.5",
    "babylonjs-hook": "^0.1.1",
    "bowser": "^2.11.0",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-tooltip": "^5.28.0",
    "virtual-scroll": "^2.2.1"
  },
  "devDependencies": {
    "@gltf-transform/cli": "^4.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/virtual-scroll": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "gh-pages": "^6.2.0",
    "local-ssl-proxy": "^2.0.5",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  }
}
